<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="btn" parent="AppTheme">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_Accept" parent="@style/btn">
        <item name="android:background">@drawable/btn_accept</item>
        <item name="android:drawableStart">@drawable/ic_check</item>
        <item name="android:text">@string/btn_accept</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_Cancel" parent="@style/btn">
        <item name="android:background">@drawable/btn_cancel</item>
        <item name="android:drawableStart">@drawable/ic_cancel</item>
        <item name="android:text">@string/btn_cancel</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_CancelW" parent="@style/btn">
        <item name="android:background">@drawable/btn_cancel_w</item>
        <item name="android:drawableStart">@drawable/ic_cancel_black</item>
        <item name="android:text">@string/btn_cancel</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



</resources>
